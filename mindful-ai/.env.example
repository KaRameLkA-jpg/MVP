# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# === DATABASE ===
# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings
DATABASE_URL="file:./dev.db"

# === APPLICATION ===
NODE_ENV="development"
PORT=3000

# === CLAUDE API ===
# Get your API key from: https://console.anthropic.com/
# ВАЖНО: Замените на ваш реальный API ключ!
ANTHROPIC_API_KEY="YOUR_ANTHROPIC_API_KEY_HERE"
CLAUDE_MODEL="claude-3-sonnet-20240229"

# === SECURITY ===
# Сгенерируйте криптографически стойкий секрет минимум 32 символа
# Можно использовать: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_SECRET_AT_LEAST_32_CHARACTERS"
CORS_ORIGIN="http://localhost:5173"

# === FEATURES ===
# Feature flags
ENABLE_ANALYTICS=false
ENABLE_LOGGING=true
MAX_MESSAGES_PER_ANALYSIS=5